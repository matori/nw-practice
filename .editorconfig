root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4

[*.html]
indent_size = 2

[*.json]
indent_size = 2

# JSON-like files
[.{htmlhintrc,jshintrc,csslintrc,jsbeautifyrc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
